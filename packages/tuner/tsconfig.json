{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@outprep/engine": ["../engine/src/index.ts"],
      "@outprep/harness": ["../harness/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../engine/src/**/*.ts",
    "../harness/src/**/*.ts"
  ],
  "exclude": ["node_modules", "proposals", "experiments"]
}
